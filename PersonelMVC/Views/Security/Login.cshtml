@model PersonelMVC.Models.EntityFramework.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="sidenav">
       
        <div class="login-main-text">
            <h2>Application<br> Login Page</h2>
            <p>Login or register from here to access.</p>
        </div>
    </div>
    <div class="main">
        @ViewBag.Message
        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
        {
            <div class="col-md-6 col-sm-12">
                <div class="login-form">
                    <form>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TCIdentityNumber)
                            @Html.TextBoxFor(m => m.TCIdentityNumber, new { @class = "form-control", placeholder = "TC Identity Number" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>
                        <button type="submit" class="btn btn-black btn-success">Login</button>

                    </form>
                </div>
            </div>
        }

    </div>
</body>
</html>
